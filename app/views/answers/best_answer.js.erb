<% if @new_best == @old_best %>
  $('#best-answer-tag').removeAttr("id");
<% else %>
  $('a.best-answer-link:first').attr({id:''});
  best_answer = $('<%= "#answer_#{@new_best.id}" %>').detach().prependTo('#answers');
  best_answer.find('a.best-answer-link').attr({id:'best-answer-tag'});
<% end %>

