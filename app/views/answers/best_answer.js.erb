<% if @answer == @old_best_answer %>
  $('#best-answer-tag').removeAttr("id");
<% else %>
  $('a.best-answer-link:first').removeAttr("id");
  best_answer = $('<%= "#answer_#{@answer.id}" %>').detach().prependTo('#answers');
  best_answer.find('a.best-answer-link').attr({id:'best-answer-tag'});
<% end %>

